<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    tools:context=".hospitalprofile">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="152dp"
        android:layout_height="41dp"

        android:text="Hospital name"
        android:textColor="#000000"
        android:textSize="20dp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/hospitalname"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:textColor="#000000"

        android:textStyle="bold" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="152dp"
            android:layout_height="41dp"

            android:text="specialization"
            android:textColor="#000000"
            android:textSize="15dp"

            android:textStyle="bold" />
    <TextView
        android:id="@+id/hospitalspecification"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="41dp"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="152dp"
            android:layout_height="41dp"

            android:text="Buildingnumber"
            android:textColor="#000000"
            android:textSize="10dp"

            android:textStyle="bold" />
    <TextView
        android:id="@+id/hospitalbuildingnumber"
        android:layout_width="200dp"
        android:layout_height="41dp"

        android:textColor="#000000"

        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="152dp"
            android:layout_height="41dp"

            android:text="Street"
            android:textColor="#000000"
            android:textSize="10dp"

            android:textStyle="bold" />
    <TextView
        android:id="@+id/hospitalstreet"
        android:layout_width="200dp"
        android:layout_height="41dp"

        android:textColor="#000000"

        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="152dp"
            android:layout_height="41dp"

            android:text="Town/Village"
            android:textColor="#000000"
            android:textSize="10dp"

            android:textStyle="bold" />
    <TextView
        android:id="@+id/villagename"
        android:layout_width="200dp"
        android:layout_height="41dp"

        android:textColor="#000000"
 />
    </LinearLayout>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="152dp"
        android:layout_height="41dp"

        android:text="  Timing"
        android:textColor="#000000"
        android:textSize="20dp"

        android:textStyle="bold" />
    <TextView
        android:id="@+id/hospitaltiming"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:textColor="#000000"
        android:textSize="20dp"

        android:textStyle="bold|italic"

        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/callbutton"
            android:layout_width="79dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_baseline_call_24"
            tools:ignore="VectorDrawableCompat" />
        <ImageView
            android:id="@+id/msgbutton"
            android:layout_width="79dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_baseline_chat_bubble_24"
            tools:ignore="VectorDrawableCompat" />
        <ImageView
            android:id="@+id/emailbutton"
            android:layout_width="79dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_baseline_mail_24"
            tools:ignore="VectorDrawableCompat" />
        <ImageView
            android:id="@+id/reportsendbutton"
            android:layout_width="79dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_baseline_send_24"
            tools:ignore="VectorDrawableCompat" />
        <ImageView
            android:id="@+id/loactionbutton"
            android:layout_width="79dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_baseline_location_on_24"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
</LinearLayout>